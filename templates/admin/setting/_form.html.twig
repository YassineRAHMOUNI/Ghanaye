<form method="post">

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">General Information</a></li>
        <li><a data-toggle="tab" href="#menu1">E-Mail Server</a></li>
        <li><a data-toggle="tab" href="#menu2">Contact information</a></li>
        <li><a data-toggle="tab" href="#menu3">About Us Page</a></li>
        <li><a data-toggle="tab" href="#menu4">References Page</a></li>
    </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <div class="form-group col-md-12 ">
                <label>Title</label>
                <input type="text" class="form-control" name="setting[title]" value="{{ setting.title }}"
                       placeholder="Title">
            </div>
            <div class="form-group col-md-12  ">
                <label>Description</label>
                <input type="text" class="form-control" name="setting[description]" value="{{ setting.description }}"
                       placeholder="Description">
            </div>
            <div class="form-group col-md-12 ">
                <label>Keywords</label>
                <input type="text" class="form-control" name="setting[keywords]" value="{{ setting.keywords }}"
                       placeholder="Description">
            </div>
        </div>


        <div id="menu1" class="tab-pane fade">
            <div class="form-group col-md-12 ">
                <label>Smtp Server</label>
                <input type="text" class="form-control" name="setting[smtpserver]" value="{{ setting.smtpserver }}"
                       placeholder="Smtp Server">
            </div>
            <div class="form-group col-md-12 ">
                <label>Smtp Mail</label>
                <input type="text" class="form-control" name="setting[smtpmail]" value="{{ setting.smtpmail }}"
                       placeholder="Smtp Mail">
            </div>
            <div class="form-group col-md-12 ">
                <label>Smtp Password</label>
                <input type="text" class="form-control" name="setting[smtppaswd]" value="{{ setting.smtppaswd }}"
                       placeholder="Smtp Password">
            </div>
            <div class="form-group col-md-12 ">
                <label>Smtp Port</label>
                <input type="text" class="form-control" name="setting[smtpport]" value="{{ setting.smtpport }}"
                       placeholder="Smtp Port">
            </div>
        </div>

        <div id="menu2" class="tab-pane fade">
            <div class="form-group col-md-12 ">
                <label>Company</label>
                <input type="text" class="form-control" name="setting[company]" value="{{ setting.company }}"
                       placeholder="Company">
            </div>
            <div class="form-group col-md-12  ">
                <label>Address</label>
                <input type="text" class="form-control" name="setting[address]" value="{{ setting.address }}"
                       placeholder=Address">
            </div>
            <div class="form-group col-md-12 ">
                <label>Fax</label>
                <input type="text" class="form-control" name="setting[fax]" value="{{ setting.fax }}"
                       placeholder="Fax">
            </div>
            <div class="form-group col-md-12 ">
                <label>Phone</label>
                <input type="text" class="form-control" name="setting[phone]" value="{{ setting.phone }}"
                       placeholder="Phone">
            </div>
            <div class="form-group col-md-12 ">
                <label>Company E-Mail</label>
                <input type="text" class="form-control" name="setting[email]" value="{{ setting.email }}"
                       placeholder="E-Mail">
            </div>
        </div>


        <div id="menu3" class="tab-pane fade">
            <div class="form-group col-md-12 ">
                <label>About Us</label>
                <textarea  class="form-control" name="setting[aboutus]"  id="editor1">{{ setting.aboutus }}</textarea>
            </div>
        </div>



        <div id="menu4" class="tab-pane fade">
            <div class="form-group col-md-12 ">
                <label>Referances</label>
                <textarea class="form-control" name="setting[referances]" id="editor2">{{ setting.referances }} </textarea>
            </div>
        </div>

        <div id="menu5" class="tab-pane fade">
            <div class="form-group col-md-12 ">
                <label>Contact</label>
                <textarea  class="form-control" name="setting[contact]" id="editor3">{{ setting.contact }}</textarea>
            </div>
        </div>


        <div class="col-md-3 form-group">
            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-check"></span>
                Save
            </button>
        </div>
    </div>
</form>
<script>
    ClassicEditor
        .create(document.querySelector('#editor1'))
        .catch(error => {
            console.error(error);
        });

    ClassicEditor
        .create(document.querySelector('#editor2'))
        .catch(error => {
            console.error(error);
        });

    ClassicEditor
        .create(document.querySelector('#editor3'))
        .catch(error => {
            console.error(error);
        });
</script>