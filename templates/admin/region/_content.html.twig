<div style="overflow-x:auto;">
    <h3>Regions</h3> <br>
    <a href="{{ path('admin_region_new') }}" class="btn btn-info btn-md btn-block"> <span
                class="glyphicon glyphicon-plus"></span>Add Region</a>
    <br>
    <table class="table" >
        <tbody>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Delete</th>
        </tr>
        {% for x in regions %}
            <tr>
                <td>{{ x.id }}</td>
                <td>{{ x.name }}</td>
                <td>
                    <form method="post" action="{{ path('admin_region_delete', {'id': x.id}) }}" onsubmit="return confirm('Are you sure to delete?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ x.id) }}">
                        <button class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp; Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
