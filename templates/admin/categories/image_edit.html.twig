{% extends 'admin/base.html.twig' %}

{% block title %}Resim Ekle{% endblock %}

{% block content %}
<div class="col-md-12">
    <h1>{{ category.title }}</h1>

    <form action="{{ path('admin_category_iupdate',{'id':id}) }}" method="post" enctype="multipart/form-data">
        Select the image to upload:
        <div class="form-group">
            <input type="file" name="imagename" id="fileToUpload">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-check"></span> Save</button>
        </div>
    </form>

    {% if category.image!=null %}
        <img src="{{ asset('uploads') }}/images/{{ category.image }}">
    {% endif %}
</div>

{% endblock %}
